		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.0.4"
	},
	"dependencies": {
		"@firebase/analytics": "^0.10.9",
		"@firebase/app": "^0.10.15",
		"@firebase/firestore": "^4.7.4",
		"@sveltejs/kit": "^2.0.0",
		"clsx": "^2.1.1",
		"express": "^4.21.1",
		"firebase-admin": "^12.1.0",
		"firebase-functions": "^6.1.0",
		"tailwind-merge": "^2.5.4"
	}
